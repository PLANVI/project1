@model JokesWebApp.Models.Сourses

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Сourses</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            


           


            <div class="form-group">
                <label asp-for="Material" for="exampleFormControlTextarea1">Содержание курса</label>
                <textarea asp-for="Material" class="form-control" id="tiny" rows="3"></textarea>
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>

      


            



            




            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>


}