@model JokesWebApp.Models.Cafe

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cafe</h4>
<hr />







<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

     


            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Изображение</label>
                <div class="custom-file">
                    <input asp-for="ImageFile" class="custom-file-input" id="FLSongImage"
                           onchange="document.getElementById('SongImagePrv').src= window.URL.createObjectURL(this.files[0])">

                </div>

                <img id="CafeImagePrv" src="" alt="Image" width="150"
                     height="150" style="border:1px; margin-top:20px;margin-left:120px;" />

            </div>




            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>






<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>


}